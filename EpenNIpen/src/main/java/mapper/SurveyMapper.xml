<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.SurveyMapper">

 <insert id="survey" parameterType="SurveyDTO">
 	insert into <!-- survey_message --> values(num_message.nextval,#{sender},#{recipient},#{message},sysdate)
 </insert>

<select id="showSurvey" parameterType="String" resultType="SurveyDTO">
	select * from <!-- survey_message --> where recipient=#{email} order by m_date desc
</select>

</mapper>